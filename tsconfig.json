{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "sourceMap": false,
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitThis": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": true
  },
  "include": ["src", "playground"],
  "exclude": ["node_modules"]
}